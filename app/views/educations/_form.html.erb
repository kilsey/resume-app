<% if @education.errors.any? %>
  <% @education.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_for @education do |f| %>
  <div class="input-group input-group-lg">
    <%= f.label :institution, class: 'input-group-addon' %>
    <%= f.text_field :institution, class: 'form-control' %>
  </div>
  <div class="input-group input-group-lg">
    <%= f.label :area, class: 'input-group-addon' %>
    <%= f.text_field :area, class: 'form-control' %>
  </div>
  <div class="input-group input-group-lg">
    <%= f.label :studyType, class: 'input-group-addon' %>
    <%= f.text_field :studyType, class: 'form-control' %>
  </div>
  <div class="input-group input-group-lg">
    <%= f.label :startDate, class: 'input-group-addon' %>
    <%= f.text_field :startDate, class: 'form-control' %>
  </div>
  <div class="input-group input-group-lg">
    <%= f.label :endDate, class: 'input-group-addon' %>
    <%= f.text_field :endDate, class: 'form-control' %>
  </div>
  <div class="input-group input-group-lg">
    <%= f.label :gpa, class: 'input-group-addon' %>
    <%= f.text_field :gpa, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
