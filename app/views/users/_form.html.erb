<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <div class="input-group input-group-lg">
    <%= f.label :name, class: 'input-group-addon' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="input-group input-group-lg">
    <%= f.label :email, class: 'input-group-addon' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="input-group input-group-lg">
    <%= f.label :phone, class: 'input-group-addon' %>
    <%= f.text_field :phone, class: 'form-control' %>
  </div>
  <div class="input-group input-group-lg">
    <%= f.label :website, class: 'input-group-addon' %>
    <%= f.text_field :website, class: 'form-control' %>
  </div>
  <div class="input-group input-group-lg">
    <%= f.label :summary, class: 'input-group-addon' %>
    <%= f.text_field :summary, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
