<% if @highlight.errors.any? %>
  <% @highlight.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>



<%= form_for [@work, @highlight] do |f| %>
  <div class="form-group">
    <%= f.label :detail %>
    <%= f.text_field :detail, class: 'form-control' %>
  </div>
  <%= f.hidden_field :work_id, :value => @work.id  %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
